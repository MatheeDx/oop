#include <iostream>

using namespace std;
int fmax(int arr[], int len) {
	int max = 0;
	for (int i = 1; i < len; i++)
		if (arr[max] < arr[i])
			max = i;
	return max;
}

int main() {
	setlocale(0, "");
	int len;
	int n = 0;

	cout << "Размер массива: ";
	cin >> len;
	int* arr = new int[len];

	cout << "Вводите числа: " << endl;
	for (int i = 0; i < len; i++)
		cin >> arr[i];

	int max = fmax(arr, len);
	cout << endl << arr[max] << " " << max << endl;
	return 0;
}
