#include <iostream>
using namespace std;

enum Suit { clubs, diamonds, hearts, spades };

const int jack = 11;
const int queen = 12;
const int king = 13;
const int ace = 14;

class card {
private:
	int number;
	Suit suit;
public:
	card() { }
	void set(int n, Suit s) {
		number = n; suit = s;
	}
	void display();
};

void card::display() {
	if (number >= 2 && number <= 10)
		cout << number;
	else
		switch (number) {
		case jack:  cout << 'J'; break;
		case queen: cout << 'Q'; break;
		case king:  cout << 'K'; break;
		case ace:   cout << 'A'; break;
		}

	switch (suit) {
	case clubs:    cout << '♣'; break;
	case diamonds: cout << '♦'; break;
	case hearts:   cout << '♥'; break;
	case spades:   cout << '♠'; break;
	}
}

int main() {
	card deck[52];
	int j;

	for (j = 0; j < 52; j++) {
		int num = (j % 13) + 2;
		Suit su = Suit(j / 13);
		deck[j].set(num, su);
	}

	cout << "Исходная колода:\n";
	for (j = 0; j < 52; j++) {
		deck[j].display();
		if (!((j + 1) % 13))
			cout << endl;
		else                
			cout << " ";  
	}

	srand(time(NULL));
	for (j = 0; j < 52; j++) {
		int k = rand() % 52;
		card temp = deck[j];
		deck[j] = deck[k];
		deck[k] = temp;
	}

	cout << "\nПеремешанная колода:\n";
	for (j = 0; j < 52; j++) {
		deck[j].display();
		if (!((j + 1) % 13))
			cout << endl;
		else               
			cout << " "; 
	}

	card hands[4][13]; 
	int i;           
	int n = 0;      

	for (j = 0; j < 13; j++)
		for (i = 0; i < 4; i++)
			hands[i][j] = deck[n++];

	for (i = 0; i < 4; i++) {
		cout << "\nРука (группа карт) " << i + 1 << "-го игрока:\n";
		for (j = 0; j < 13; j++) {
			hands[i][j].display();
			if (j + 1 < 13) cout << ' '; else cout << endl;
		}
	}

	return 0;
}
